{
  "manifest_version": 3,
  "name": "AYYYA - AI Integration for WooCommerce % Chatgpt ",
  "version": "1.0",
  "action": {
    "default_title": "Open WooCommerce Audit"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon16.png",
    "128": "icons/icon16.png"
  },
  "permissions": [  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://asmine-production.up.railway.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["slider.html", "styles.css"],
      "matches": ["https://chatgpt.com/*"]
    }
  ],
  
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "css": ["styles.css", "modal.css", "slider.css"],
      "js": ["wooAuth.js", "modal.js", "slider.js", "pricingAnalyzer.js", "marketResearch.js", "reviewGenerator.js"],
      "run_at": "document_idle"
    }
  ]
}

